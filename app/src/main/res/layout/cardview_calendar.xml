<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="205dp"
        android:layout_height="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_calendar_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_calendar_brand"
                    android:layout_width="115dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:autoSizeTextType="uniform"
                    android:text="textview_calendar_brand" />

                <TextView
                    android:id="@+id/textview_calendar_menu"
                    android:layout_width="115dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:autoSizeMaxTextSize="40sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:text="textview_calendar_menu"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textview_calendar_date"
                    android:layout_width="115dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:autoSizeTextType="uniform"
                    android:text="textview_calendar_date" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>